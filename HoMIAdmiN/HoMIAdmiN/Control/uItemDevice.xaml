             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" MinHeight="25" d:DesignHeight="35">
    
    <StackPanel Orientation="Horizontal" MinWidth="0">
        <StackPanel.Background>
            <SolidColorBrush />
        </StackPanel.Background>
        <Image Name="ImgDevice" Width="20" Height="20" Source="/HoMIAdmiN;component/Images/Composant_32.png" />
        <Image Name="ImgDefZone" Width="20" Height="20" Source="/HoMIAdmiN;component/Images/ZoneNo_32.png" />
