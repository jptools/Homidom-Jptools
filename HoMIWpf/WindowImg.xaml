<Window x:Class="WindowImg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sélectionner une image" Width="700" ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" Topmost="False" Icon="/HoMIWpF;component/icone.ico">

    <Grid Background="#636060">
        <StackPanel >
            <ScrollViewer VerticalAlignment="Top" Margin="5" VerticalScrollBarVisibility="Auto" Height="450" Width="650">
                <WrapPanel Name="Wrp" Background="DarkGray" HorizontalAlignment="Left" />
            </ScrollViewer>
            <StackPanel Margin="5,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="BtnUpload" Height="25" Template="{DynamicResource GlassButton}" Margin="2" Content="Upload" Width="70" Foreground="White" />
                <Button Name="BtnOK" Height="25" Template="{DynamicResource GlassButton}" Margin="2" Content="Ouvrir" Width="70" Foreground="White" />
                <Button Name="BtnCancel" Height="25" Template="{DynamicResource GlassButton}" Margin="2" Content="Annuler" Width="70" Foreground="White" />
            </StackPanel >
        </StackPanel>
    </Grid>
</Window>
